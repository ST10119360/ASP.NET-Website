@model IEnumerable<iwish.Models.Car>

@{
    ViewBag.Title = "Index";
}

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" style="color: lightseagreen">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarMake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KmTrav)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KmServ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avalaible)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CarMake)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarModel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KmTrav)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KmServ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avalaible)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CarNo }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CarNo }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CarNo })
                </td>
            </tr>
        }

    </table>
